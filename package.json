{
  "name": "indiemakers",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "api": "node --loader ts-node/esm.mjs services/local.ts",
    "discord:config": "node --loader ts-node/esm.mjs services/discord/command",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@cloudseat/micro-body": "^1.0.5",
    "@nuxt/content": "^1.14.0",
    "@skjnldsv/vue-plyr": "^7.0.1-alpha.0",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "axios": "^0.21.1",
    "core-js": "^3.9.1",
    "dayjs": "^1.10.4",
    "discord-interactions": "^2.0.2",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-auth-lite": "^0.8.8",
    "firebase-firestore-lite": "^1.0.3",
    "hex2dec": "^1.1.2",
    "imagekit": "^3.1.2",
    "linkifyjs": "^2.1.9",
    "nuxt": "^2.15.3",
    "nuxt-font-loader-strategy": "^1.1.9",
    "nuxt-purgecss": "^1.0.0",
    "raw-body": "^2.4.1",
    "rss": "^1.2.2",
    "rss-parser": "^3.12.0",
    "sitemap": "^7.0.0",
    "store": "^2.0.12",
    "stripe": "^8.148.0",
    "vue-js-modal": "^2.0.0-rc.6",
    "vue-lazy-hydration": "^2.0.0-beta.4",
    "vue-lazyload": "^1.3.3",
    "vue-warehouse": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@nuxt/types": "^2.15.3",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/tailwindcss": "^4.0.1",
    "@types/hex2dec": "^1.1.0",
    "@types/imagekit": "^3.1.1",
    "@types/rss": "0.0.28",
    "babel-eslint": "^10.1.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.7.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.1.1"
  }
